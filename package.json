{
  "name": "loginjwt-https-server",
  "version": "1.0.0",
  "description": "Servidor HTTPS con Node.js para proteger la aplicación PHP",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "generate-certs": "node generate-certificates.js",
    "status": "node manager.js status",
    "setup": "npm install && npm run generate-certs",
    "clean": "rmdir /s /q ssl node_modules 2>nul & mkdir ssl",
    "test-ssl": "node -e \"console.log('Testing SSL...'); const https = require('https'); https.get('https://localhost:3443', (res) => console.log('✅ SSL OK:', res.statusCode));\""
  },
  "keywords": [
    "https",
    "ssl",
    "nodejs",
    "php",
    "proxy"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "selfsigned": "^3.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
